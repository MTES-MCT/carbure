# LOCAL DEVELOPMENT CONFIG FILE

server {
    listen 80 default_server;
    server_name _;
    location / {
      return 404;
    }
}

server {
    listen 80;
    server_name ${NGINX_HOSTS};
    charset     utf-8;
    client_max_body_size 5M;

    proxy_read_timeout 300;
    proxy_connect_timeout 300;
    proxy_send_timeout 300;


    #add_header Content-Security-Policy "connect-src 'self'; default-src 'self'; img-src 'self'; manifest-src 'self'; script-src-elem 'self'; style-src-elem 'self';";
    add_header Strict-Transport-Security "max-age=300; includeSubDomains; preload; always;";
    add_header X-XSS-Protection "1; mode=block";

    root /var/www/html;

    ## gzip config
    gzip on;
    gzip_min_length 1000;
    gzip_comp_level 5;
    gzip_proxied any;
    gzip_vary on;
    gzip_types text/plain
        text/css
        text/javascript
        text/xml
        text/plain
        text/x-component
        application/javascript
        application/json
        application/xml
        application/rss+xml
        font/truetype
        font/opentype
        application/vnd.ms-fontobject
        image/svg+xml;

    # serve static files
    location /static {
        alias /var/www/html;
    }

    # proxy pass
    location / {
        proxy_pass  http://carbure-django:8001;
        proxy_set_header Host            $host;
        proxy_set_header X-Forwarded-For $remote_addr;
    }

    # frontend dev server proxy pass
    location /app {
        proxy_pass  http://carbure-frontend:3000/app/;
    }

    # serve uploaded files to administrators
    location /files {
        alias /app/files;
        autoindex on;
        autoindex_format html;
        autoindex_localtime on;
        auth_basic "Administrator Login";
        auth_basic_user_file /etc/nginx/conf.d/.htaccess_uploaded_files;
    }


    # frontend hot reloading websocket proxy pass
    location /ws {
        proxy_set_header X-Real-IP  $remote_addr;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header Host $host;

        proxy_pass  http://carbure-frontend:3000/ws;

        proxy_redirect off;

        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}
