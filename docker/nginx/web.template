upstream django {
    server carbure-django-uwsgi:8001;
}

# configuration of the server
server {
    listen      ${NGINX_PORT};
    server_name ${NGINX_HOSTS};
    charset     utf-8;
    client_max_body_size 5M;

    root /var/www/html;

    # serve static files
    location /static {
        alias /var/www/html;
    }

    # uwsgi
    location / {
        uwsgi_pass  django;
        include     /etc/nginx/conf.d/uwsgi_params;
    }
}
